<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.firma.sp.studentskiposao">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/student_job_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/student_job_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".view.activity.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.AppCompat.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".view.activity.JobsActivity"
            android:screenOrientation="portrait" />
        <activity android:name=".view.activity.JobApplyActivity" />
        <activity android:name=".view.activity.CompaniesActivity"></activity>
    </application>

</manifest>